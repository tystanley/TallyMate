<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="TallyMate.AppShell"
    xmlns:views="clr-namespace:TallyMate.Views">

    <TabBar>
        <Tab Title="Calendar"
             Icon="calendar_icon.png">
            <ShellContent ContentTemplate="{DataTemplate views:CalendarPage}" />
        </Tab>
        <Tab Title="Stats"
             Icon="stats_icon.png">
            <ShellContent ContentTemplate="{DataTemplate views:StatsPage}" />
        </Tab>
        <Tab Title="Tally"
             Icon="tally_icon.png">
            <ShellContent ContentTemplate="{DataTemplate views:TallyPage}" />
        </Tab>
        <Tab Title="Leaderboard"
             Icon="leaderboard_icon.png">
            <ShellContent ContentTemplate="{DataTemplate views:LeaderboardPage}" />
        </Tab>
        <Tab Title="settings"
             Icon="setting_icon.png">
            <ShellContent ContentTemplate="{DataTemplate views:SettingsPage}" />
        </Tab>
    </TabBar>

    

</Shell>